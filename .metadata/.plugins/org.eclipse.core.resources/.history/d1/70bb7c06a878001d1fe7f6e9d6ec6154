package com.ersin.retrofitDemo.webApi.controllers;

import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.multipart.MultipartFile;

import com.ersin.retrofitDemo.business.abstracts.ImageService;
import com.ersin.retrofitDemo.business.requests.imageRequests.CreateImageRequest;

@RestController
@RequestMapping("/api/images")
public class ImageController {
	private ImageService imageService;

	public ImageController(ImageService imageService) {
		super();
		this.imageService = imageService;
	}

	@PostMapping("/add")
	public void addImage(MultipartFile file) {
		imageService.addImageRequest(createImageRequest);
	}
}
