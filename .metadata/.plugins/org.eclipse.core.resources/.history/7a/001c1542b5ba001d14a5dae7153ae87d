package com.ersin.retrofitDemo.business.rules;

import org.springframework.stereotype.Service;

import com.ersin.retrofitDemo.dataAccess.abstracts.ProductRepository;

import lombok.AllArgsConstructor;

@AllArgsConstructor
@Service
public class ProductRules {
	private ProductRepository productRepository;

	public void checkIfProductNameExists(String name) {
		if (this.brandRepository.existsByName(name)) {
			throw new BusinessException("Brand name already exists");// RuntimeException
		}
	}
}
